<%= turbo_frame_tag "listing", target: "_top" do %>
  <% if @events.any? %>
    <div class="grid grid-flow-row gap-8 text-neutral-600 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      <%= render @events %>
    </div>
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  <% else %>
    <p>
      No events found :( Try to adjust filters
    </p>
  <% end %>
<% end %>
