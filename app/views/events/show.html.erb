<% content_for(:title) { @event.title } %>

<div class="min-h-full w-full sm:w-10/12 lg:w-8/12 mx-auto px-4 lg:px-0 py-8 lg:py-12">
  <div class="flex items-center justify-center">
    <%= link_to inline_svg_tag("chevron-left.svg", class: "w-4"), root_path(all: "y"), class: "bg-gray-300 hover:bg-gray-400 hover:text-white font-medium rounded-full text-sm p-2.5 text-center inline-flex items-center me-2" %>
    <h1 class="text-3xl flex-1 whitespace-nowrap text-ellipsis overflow-hidden"><%= @event.title %></h1>
  </div>

  <p class="mt-4 mb-6 flex items-center gap-x-6">
    <span class="flex items-center">
      <%= inline_svg_tag("map-pin.svg", class: "w-5 mr-1") %> <%= @event.country %>
    </span>
    <span class="flex items-center">
      <%= inline_svg_tag("calendar.svg", class: "w-5 mr-1") %> <%= to_datetime(@event.date) %>
    </span>
  </p>
  <p class="mt-4 mb-6 whitespace-break-spaces"><%= @event.description %></p>
</div>
